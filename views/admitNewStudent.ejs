        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">

            <div id="alertwale">
              <div class="alert alert-danger" id = "alertMsg" role="alert"> </div>

            </div>

            <div class="alert alert-success" id = "successAlert" role="alert"> </div>

            <div class="row">
            <div class="col-md-4">  
                
                <label for="exampleInputEmail3">Search Student By JEE Roll No / 12th Roll no:</label>

                <input type="text"  class="form-control" id="stuRollNo" placeholder="Roll No">
                <button type="button" class="btn btn-gradient-primary spacer" onclick="searchStudent()">Search</button>
            </div>
            
            <div class="col-12">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Fill Details</h4>
                    <form class="form-sample" id="admitForm" method="post" action="/admin/admitStudentForm">
                   
                      <div class="row">

                        <!-- Roll Number -->
                        <div class="col-md-6">
                          <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Roll Number</label>
                            <div class="col-sm-9">
                              <input type="text" disabled value="" id = "rno" name="srollNo" class="form-control" placeholder="Roll Number" required/>
                            </div>
                          </div>
                        </div>


                        <!-- Name -->
                        <div class="col-md-6">
                          <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Name</label>
                            <div class="col-sm-9">
                              <input type="text" disabled id = "sname" name="sname" class="form-control" placeholder="Name" required />
                            </div>
                          </div>
                        </div>
                      </div>


                      <div class="row">

                        <!-- Father's Name -->
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Father's Name</label>
                                <div class="col-sm-9">
                                    <input type="text" disabled name="sfather" id="sfather" class="form-control" placeholder="Father's Name" required />
                                </div>
                            </div>
                        </div>

                        <!-- Date of Birth -->
                        <div class="col-md-6">
                          <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Date of Birth</label>
                            <div class="col-sm-9">
                              <input type="date" disabled name="sdob" id="sdob" class="form-control" required   />
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="row">

                        <!-- Category  -->
                        <div class="col-md-6">
                          <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Category</label>
                            <div class="col-sm-9">
                                <input type="text" disabled name="scategory" id="scategory" class="form-control" placeholder="Category" disabled required />
                            </div>
                          </div>
                        </div>

                        
                        <!-- Domicile  -->
                        <div class="col-md-6">
                          <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Domicile</label>
                            <div class="col-sm-4">
                              <div class="form-check">
                                <label class="form-check-label">
                                  <input type="radio" disabled class="form-check-input" name="sdomicile" id="sdomicileYes" value="Yes" checked> Yes </label>
                              </div>
                            </div>
                            <div class="col-sm-5">
                              <div class="form-check">
                                <label class="form-check-label">
                                  <input type="radio" disabled class="form-check-input"   name="sdomicile" id="sdomicileNo" value="No"> No </label>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>


                    <div class="row">

                        <!-- Gender -->
                        <div class="col-md-6">
                            <div class="form-group row">
                              <label class="col-sm-3 col-form-label">Gender</label>
                              <div class="col-sm-9">
                                  <input type="text" disabled name ="sgender" id="sgender" class="form-control" placeholder="Gender" disabled required />
                              </div>
                              </div>
                        </div>

                        <!-- Candidate Type  -->
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Candidate Type</label>
                                <div class="col-sm-9">
                                    <input type="text" disabled name="stype" class="form-control" id = "stype" placeholder="Candidate Type" required/>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        
                      <!-- Seat Category -->
                      <div class="col-md-6">
                        <div class="form-group row">
                          <label class="col-sm-3 col-form-label">Seat Category</label>
                          <div class="input-group-prepend">
                            <button class="btn btn-sm btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span id = "selCat">Category</span></button>
                            <div class="dropdown-menu" id = "CategoryOptionToAdd">

                              <!-- Category OPTIONS FROM JS -->

                            </div>
                          </div>
                        </div>
                      </div>

                      <input type="text" name="sscategory" id="selCategory" value="" hidden required>

                      
                      <!-- Seat Sub Category  -->
                      <div class="col-md-6">
                        <div class="form-group row">
                          <label class="col-sm-3 col-form-label">Seat Sub Category</label>
                          <div class="input-group-prepend">
                            <button class="btn btn-sm btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span id = "ssubCat">Sub Category</span></button>
                            <div class="dropdown-menu" id = "subCategoryOptionToAdd">
                              
                              <!-- Category OPTIONS FROM JS -->
                              
                            </div>
                          </div>
                        </div>
                      </div>
                      
                      <input type="text" name="ssubcategory" id="selsubCategory" value="" hidden required  ">
                      

                    </div>


                      <div class="row">

                        <!-- Branch -->
                        <div class="col-md-6">
                          <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Branch</label>
                            <div class="input-group-prepend">
                              <button class="btn btn-sm btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span id = "selBranch">Branch</span></button>
                              <div class="dropdown-menu" id = "selBranchOptions">

                                <!-- Taking Branch dynamically from the api js -->

                                <!-- <span class="dropdown-item" onclick="updateCat('Chemical Engineering','selBranch');document.getElementById('ssBranch').value = 'Chemical_Engineering'" style="cursor: pointer;">Chemical Engineering</span> -->
                                

                                <!-- Coming From the JS -->

                              </div>
                            </div>
                          </div>
                        </div>

                        <!-- Phone Number -->
                        <div class="col-md-6">
                          <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Phone Number</label>
                            <div class="col-sm-9">
                              <input type="text" name="sphone" id="sphone" class="form-control" placeholder="Phone Number" required/>
                            </div>
                          </div>
                        </div>
                        
                      </div>
                      
                      <input type="text" name="ssbranch" id="ssBranch" value="" hidden required>
                      
                      


                      <div class="row">

                        <!-- Available Seats  -->
                        <div class="col-md-6">
                          <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Available Seats</label>
                            <div class="col-sm-9">
                              <input type="text" class="form-control" id="ssAvailable" required placeholder="Available Seats" readonly />
                            </div>
                          </div>
                        </div>

                        <!-- Remarks  -->
                        <div class="col-md-6">
                          <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Remarks</label>
                            <div class="col-sm-9">
                                <input type="text" name="remarks" class="form-control" value="OK" required/>
                              </div>    
                          </div>
                        </div>
                      </div>


                      <button type="button" onclick="alertAdmittingStudent()" id="SubmitFormBtn" class="btn btn-gradient-primary me-2" disabled>Submit</button>
                      <button type="submit" id="mainSubBtn" onclick="submitAdmittedStudent()" hidden></button>
                    <button type="reset" id="rbtn" class="btn btn-gradient-danger btn-fw" onclick="defaultCategorySubCat()">Reset</button>
                    </form>
                  </div>
                </div>
              </div>
          </div>
          <!-- content-wrapper ends -->
