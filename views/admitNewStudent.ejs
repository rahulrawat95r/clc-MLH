    <!-- End custom js for this page -->


    <!-- Error Boxx  -->

    <script src="/assets/js/myCustomJs.js"></script>
    <script src="/assets/js/apiJS.js"></script>
    <script src="/assets/js/seatOrder.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
      hideError();    // My custom js 
      hideSuccess();    // my custom js 
      hideFeature();     // my custom js 
      copyrightYear();      // my custom js 


      function checknewAdmit (){

       let x =  document.getElementById('newStuAlert').value;
       console.log (x);
        if (x != "0"){
          if (x == "1"){
            hideSuccess ();
            showError ('Server Error !');

            swal.fire ('Error','Server Error','error')
          }

          else{
            hideError();
            showSuccess (x);

            swal.fire ('Success',x,'success');
          }
        }

      }

      checknewAdmit ();
    </script>
  </body>
